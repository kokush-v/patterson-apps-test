generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UploadedFile {
  id         String   @id @map("_id")
  bytes      Int
  created_at DateTime @default(now())
  filename   String
  ocrResult  String   @default("")

  uploadedStatus String
  matchedStatus  String

  invoiceAnalyzedData    String @default("")
  attachmentAnalyzedData String @default("")
  summaryAnalyzedData    String @default("")

  invoices    Int[]
  attachments Int[]
}

model AiSettings {
  id                            String @id @default(auto()) @map("_id") @db.ObjectId
  splitInvoiceToAttachmentPromt String @default("")
  analyzeInvoicePromt           String @default("")
  analyzeAttachmentPromt        String @default("")
  summarizePromt                String @default("")
}
